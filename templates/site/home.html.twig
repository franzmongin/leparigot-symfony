
{% extends 'base.html.twig' %}

{% block title %}Hello SiteController!{% endblock %}

{% block body %}
<style>
.container-top{
          max-width:80vw;
        }
.jumbotron{
  height:400px;
  margin-bottom: 40px;
  background-image: url("{{ asset('img/paris2.jpg') }}");
  background-size: cover;
  color:white;
  
}
.article{
  padding-bottom:20px;
}
.card-img-top{
  
}

.card{
  margin:0 auto;
  margin-bottom:50px;
}
h2{
  text-align:center;
  font-family: 'Staatliches', cursive;

  padding-bottom:30px;
  padding-top:40px;
  font-weight:bold;
}
.topresto, .topbistro, .topexpo{
  
}
.topresto, .topbistro{
  margin-right:40px;
}
.jumbotron .container-fluid .row .col-4{
  letter-spacing:10px;
}



</style>

<!-- JUMBOTORN -->
<div class="jumbotron jumbotron-fluid">
  <div class="container-fluid" style="height:100%">
    <div class="row" style="height:33.3%;"><div class="col-4" style="color:#002b80; font-size:75px; font-weight:bold; font-family: 'Staatliches', cursive; text-align:center; padding-top:20px; text-shadow: #000000 3px 3px, #000000 -3px 3px, #000000 -3px -3px, #000000 3px -3px;">BONS PLANS</div></div>
    <div class="row" style="height:33.3%"><div class="col-4 offset-4" style="color:white; font-size:75px; font-weight:bold; font-family: 'Staatliches', cursive; text-align:center; text-shadow: #000000 3px 3px, #000000 -3px 3px, #000000 -3px -3px, #000000 3px -3px;padding-top:20px; ">PARISIENS</div></div>
    <div class="row" style="height:33.3%"><div class="col-4 offset-8" style="color:red; font-size:75px; font-weight:bold; font-family: 'Staatliches', cursive; text-align:center; text-shadow: #000000 3px 3px, #000000 -3px 3px, #000000 -3px -3px, #000000 3px -3px; padding-top:20px;">A PRIX DOUX</div></div>
  </div>
</div>
<!-- JUMBOTORN END -->


<!-- TOP ARTICLES -->
<div class="container container-top">
  <div class="row tops">

    <!-- TOP RESTO -->
    <div class="col-sm topresto">
      <h2>TOP RESTO</h2>
      {% for resto in restos %}
        <div class="card" style="width: 18rem;">
          <a href="{{ path('article_show', {'id': resto.id }) }}"><img class="card-img-top img-thumbnail" src="{{ asset('images/articles/'~ resto.image)}}" alt="Card image cap"></a>
          <div class="card-body">
            <h5 class="card-title">{{resto.name}}</h5>
            <p class="card-text">~{{resto.price}}€</p>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- TOP BISTRO -->
    <div class="col-sm topbistro">
    <h2>TOP BISTRO</h2>
      {% for bistro in bistros %}
        <div class="card" style="width: 18rem;">
          <a href="{{ path('article_show', {'id': bistro.id }) }}"><img class="card-img-top img-thumbnail" src="{{ asset('images/articles/'~ bistro.image)}}" alt="Card image cap"></a>
          <div class="card-body">
            <h5 class="card-title">{{bistro.name}}</h5>
            <p class="card-text">~{{bistro.price}}€</p>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- TOP EXPO -->
    <div class="col-sm topexpo">
      <h2>TOP EXPO</h2>
      {% for expo in expos %}
        <div class="card" style="width: 18rem;">
          <a href="{{ path('article_show', {'id': expo.id }) }}"><img class="card-img-top img-thumbnail" src="{{ asset('images/articles/'~ expo.image)}}" alt="Card image cap"></a>
          <div class="card-body">
            <h5 class="card-title">{{expo.name}}</h5>
            {% if expo.price > 0 %}
            <p class="card-text">~{{expo.price}}€</p>
            {% else %}
            <p class="card-text">GRATUIT</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    


  </div>
</div>
<!-- TOP ARTICLES END -->

{% endblock %}
