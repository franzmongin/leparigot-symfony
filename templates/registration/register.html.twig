{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
form{
    margin-top:150px;
}

</style>
<div class="container" style="margin-top:40vh; height:100vh; width:30vh;">
    

    {{ form_start(registrationForm, {'attr': {'style': 'text-align:center'}}) }}
    <h1 class="h3 mb-3 font-weight-normal" style="text-align:center;">INSCRIPTION</h1>
        {{ form_widget(registrationForm.username, {
            'attr': {'autofocus': true},
            'attr': {'placeholder': 'Pseudo'}
            }) }} <br>
        {{ form_widget(registrationForm.plainPassword, {
            'attr': {'placeholder': 'Mot de passe'}
            }) }} <br>
        

        <button class="btn btn-lg btn-primary" type="submit">S'inscrire
    </button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
